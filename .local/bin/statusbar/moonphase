#!/bin/sh

mnphs=$(TERMCAP=xterm pom $1 | grep -o 'New\|Waxing Crescent\|First Quarter\|Waxing Gibbous\|Full\|Waning Gibbous\|Last Quarter\|Waning Crescent' | grep -m1 '.')
prcnt=$(TERMCAP=xterm pom $1 | grep -o '[[:digit:]]*%' | grep -o '[[:digit:]]*' )

case "$mnphs" in
    "New") icon="ðŸŒ‘" prcnt="0" ;;
    "Waxing Crescent") icon="ðŸŒ’" ;;
    "First Quarter") icon="ðŸŒ“" prcnt="50" ;;
    "Waxing Gibbous") icon="ðŸŒ”" ;;
    "Full") icon="ðŸŒ•" prcnt="100" ;;
    "Waning Gibbous") icon="ðŸŒ–" ;;
    "Last Quarter") icon="ðŸŒ—" prcnt="50" ;;
    "Waning Crescent") icon="ðŸŒ˜" ;;
    *) echo error ;;
esac

case $BLOCK_BUTTON in
    1) pgrep -x dunst >/dev/null && notify-send "ðŸŒœ$(TERMCAP=xterm pom)" ;;
esac

echo "${icon} ${prcnt}%"

#!/bin/sh

case $BLOCK_BUTTON in
    1) setsid -f "st" -e pulsemixer ;;
    2) pamixer -t ;;
    4) pulsemixer --change-volume +5 ;;
    5) pulsemixer --change-volume -5 ;;
esac

[ $(pamixer --get-mute) = true ] && echo "ðŸ”‡ 00%" && exit
vol=$(pamixer --get-volume)

if [ "$vol" -gt "70" ]; then
    icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
    icon="ðŸ”ˆ"
else
    icon="ðŸ”‰"
fi

printf "%s %s%%\n" "$icon" "$vol"

exit 0
